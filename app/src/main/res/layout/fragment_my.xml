<?xml version="1.0" encoding="utf-8"?>
<androidx.swiperefreshlayout.widget.SwipeRefreshLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/myRefresh"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/backgroundGrey"
        tools:context=".PersonalActivity">

        <TextView
            android:id="@+id/personal"
            android:layout_width="match_parent"
            android:layout_height="140sp"
            android:background="@color/colorPrimary"/>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/avatar"
            android:layout_width="100sp"
            android:layout_height="100sp"
            android:layout_marginTop="20sp"
            android:layout_marginStart="20sp"
            android:src="@mipmap/ic_launcher"/>
        <TextView
            android:id="@+id/username"
            android:layout_width="200sp"
            android:layout_height="60sp"
            android:layout_marginTop="20sp"
            android:layout_marginStart="145sp"
            android:gravity="center_vertical"
            android:textColor="@color/black"
            android:textSize="35sp"
            android:text="未登录"
            tools:ignore="HardcodedText" />
        <TextView
            android:layout_width="200sp"
            android:layout_height="40sp"
            android:layout_marginTop="80sp"
            android:layout_marginStart="145sp"
            android:gravity="center_vertical"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:text="美好的一天从现在开始"
            tools:ignore="HardcodedText" />

        <RelativeLayout
            android:id="@+id/information"
            android:background="#ffffff"
            android:layout_below="@id/personal"
            android:layout_marginTop="10sp"
            android:layout_width="match_parent"
            android:layout_height="56sp"
            android:gravity="center_vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="25sp"
                android:textSize="20sp"
                android:text="    我的信息"
                android:textColor="@color/black"
                android:paddingEnd="20sp"
                app:drawableLeftCompat="@mipmap/information"
                app:drawableRightCompat="@mipmap/right"
                tools:ignore="HardcodedText,RtlSymmetry" />
        </RelativeLayout>

        <View
            android:id="@+id/divide1"
            android:layout_below="@id/information"
            android:layout_width="match_parent"
            android:layout_marginStart="20sp"
            android:background="@color/backgroundGrey"
            android:layout_height="1sp"
            tools:ignore="SmallSp">
        </View>

        <RelativeLayout
            android:id="@+id/security"
            android:background="#ffffff"
            android:layout_below="@id/divide1"
            android:layout_width="match_parent"
            android:layout_height="56sp"
            android:layout_marginTop="1sp"
            android:gravity="center_vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="25sp"
                android:textSize="20sp"
                android:text="    账号安全"
                android:textColor="@color/black"
                android:paddingEnd="20sp"
                app:drawableLeftCompat="@mipmap/security"
                app:drawableRightCompat="@mipmap/right"
                tools:ignore="HardcodedText,RtlSymmetry" />
        </RelativeLayout>

        <View
            android:id="@+id/divide2"
            android:layout_below="@id/security"
            android:layout_width="match_parent"
            android:layout_marginStart="20sp"
            android:background="@color/backgroundGrey"
            android:layout_height="10sp"
            tools:ignore="SmallSp">
        </View>

        <RelativeLayout
            android:id="@+id/shoppingCart"
            android:background="#ffffff"
            android:layout_below="@id/divide2"
            android:layout_width="match_parent"
            android:layout_height="56sp"
            android:layout_marginTop="1sp"
            android:gravity="center_vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="25sp"
                android:textSize="20sp"
                android:text="    购物车"
                android:textColor="@color/black"
                android:paddingEnd="20sp"
                app:drawableLeftCompat="@mipmap/cart"
                app:drawableRightCompat="@mipmap/right"
                tools:ignore="HardcodedText,RtlSymmetry" />
        </RelativeLayout>

        <View
            android:id="@+id/divide3"
            android:layout_below="@id/shoppingCart"
            android:layout_width="match_parent"
            android:layout_marginStart="20sp"
            android:background="@color/backgroundGrey"
            android:layout_height="10sp"
            tools:ignore="SmallSp">
        </View>

        <RelativeLayout
            android:id="@+id/realNameAuthentication"
            android:background="#ffffff"
            android:layout_below="@id/divide3"
            android:layout_width="match_parent"
            android:layout_height="56sp"
            android:layout_marginTop="1sp"
            android:gravity="center_vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="25sp"
                android:textSize="20sp"
                android:text="    实名认证"
                android:textColor="@color/black"
                android:paddingEnd="20sp"
                app:drawableLeftCompat="@mipmap/authentication"
                app:drawableRightCompat="@mipmap/right"
                tools:ignore="HardcodedText,RtlSymmetry" />
        </RelativeLayout>

        <View
            android:id="@+id/divide4"
            android:layout_below="@id/realNameAuthentication"
            android:layout_width="match_parent"
            android:layout_marginStart="20sp"
            android:background="@color/backgroundGrey"
            android:layout_height="1sp"
            tools:ignore="SmallSp">
        </View>

        <RelativeLayout
            android:id="@+id/expertCertification"
            android:background="#ffffff"
            android:layout_below="@id/divide4"
            android:layout_width="match_parent"
            android:layout_height="56sp"
            android:layout_marginTop="1sp"
            android:gravity="center_vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="25sp"
                android:textSize="20sp"
                android:text="    专家认证"
                android:textColor="@color/black"
                android:paddingEnd="20sp"
                app:drawableLeftCompat="@mipmap/authentication"
                app:drawableRightCompat="@mipmap/right"
                tools:ignore="HardcodedText,RtlSymmetry" />
        </RelativeLayout>

        <View
            android:id="@+id/divide5"
            android:layout_below="@id/expertCertification"
            android:layout_width="match_parent"
            android:layout_marginStart="20sp"
            android:background="@color/backgroundGrey"
            android:layout_height="1sp"
            tools:ignore="SmallSp">
        </View>

        <RelativeLayout
            android:id="@+id/povertyIdentification"
            android:background="#ffffff"
            android:layout_below="@id/divide5"
            android:layout_width="match_parent"
            android:layout_height="56sp"
            android:layout_marginTop="1sp"
            android:gravity="center_vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="25sp"
                android:textSize="20sp"
                android:text="    贫困认定"
                android:textColor="@color/black"
                android:paddingEnd="20sp"
                app:drawableLeftCompat="@mipmap/authentication"
                app:drawableRightCompat="@mipmap/right"
                tools:ignore="HardcodedText,RtlSymmetry" />
        </RelativeLayout>

        <View
            android:id="@+id/divide6"
            android:layout_below="@id/povertyIdentification"
            android:layout_width="match_parent"
            android:layout_marginStart="20sp"
            android:background="@color/backgroundGrey"
            android:layout_height="10sp"
            tools:ignore="SmallSp">
        </View>

        <RelativeLayout
            android:id="@+id/donation"
            android:background="#ffffff"
            android:layout_below="@id/divide6"
            android:layout_width="match_parent"
            android:layout_height="56sp"
            android:layout_marginTop="1sp"
            android:gravity="center_vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="25sp"
                android:textSize="20sp"
                android:text="    捐赠物品"
                android:textColor="@color/black"
                android:paddingEnd="20sp"
                app:drawableLeftCompat="@mipmap/donation"
                app:drawableRightCompat="@mipmap/right"
                tools:ignore="HardcodedText,RtlSymmetry" />
        </RelativeLayout>

        <View
            android:id="@+id/divide7"
            android:layout_below="@id/donation"
            android:layout_width="match_parent"
            android:layout_marginStart="20sp"
            android:background="@color/backgroundGrey"
            android:layout_height="1sp"
            tools:ignore="SmallSp">
        </View>

        <RelativeLayout
            android:id="@+id/donationOrder"
            android:background="#ffffff"
            android:layout_below="@id/divide7"
            android:layout_width="match_parent"
            android:layout_height="56sp"
            android:layout_marginTop="1sp"
            android:gravity="center_vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="25sp"
                android:textSize="20sp"
                android:text="    捐赠订单"
                android:textColor="@color/black"
                android:paddingEnd="20sp"
                app:drawableLeftCompat="@mipmap/order"
                app:drawableRightCompat="@mipmap/right"
                tools:ignore="HardcodedText,RtlSymmetry" />
        </RelativeLayout>

        <View
            android:id="@+id/divide8"
            android:layout_below="@id/donationOrder"
            android:layout_width="match_parent"
            android:layout_marginStart="20sp"
            android:background="@color/backgroundGrey"
            android:layout_height="10sp"
            tools:ignore="SmallSp">
        </View>

        <RelativeLayout
            android:id="@+id/sale"
            android:background="#ffffff"
            android:layout_below="@id/divide8"
            android:layout_width="match_parent"
            android:layout_height="56sp"
            android:layout_marginTop="1sp"
            android:gravity="center_vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="25sp"
                android:textSize="20sp"
                android:text="    售卖物品"
                android:textColor="@color/black"
                android:paddingEnd="20sp"
                app:drawableLeftCompat="@mipmap/sale"
                app:drawableRightCompat="@mipmap/right"
                tools:ignore="HardcodedText,RtlSymmetry" />
        </RelativeLayout>

        <View
            android:id="@+id/divide9"
            android:layout_below="@id/sale"
            android:layout_width="match_parent"
            android:layout_marginStart="20sp"
            android:background="@color/backgroundGrey"
            android:layout_height="1sp"
            tools:ignore="SmallSp">
        </View>

        <RelativeLayout
            android:id="@+id/saleOrder"
            android:background="#ffffff"
            android:layout_below="@id/divide9"
            android:layout_width="match_parent"
            android:layout_height="56sp"
            android:layout_marginTop="1sp"
            android:gravity="center_vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="25sp"
                android:textSize="20sp"
                android:text="    售卖订单"
                android:textColor="@color/black"
                android:paddingEnd="20sp"
                app:drawableLeftCompat="@mipmap/order"
                app:drawableRightCompat="@mipmap/right"
                tools:ignore="HardcodedText,RtlSymmetry" />
        </RelativeLayout>

        <View
            android:id="@+id/divide10"
            android:layout_below="@id/saleOrder"
            android:layout_width="match_parent"
            android:layout_marginStart="20sp"
            android:background="@color/backgroundGrey"
            android:layout_height="10sp"
            tools:ignore="SmallSp">
        </View>

        <RelativeLayout
            android:id="@+id/signOut"
            android:background="#ffffff"
            android:layout_below="@id/divide10"
            android:layout_width="match_parent"
            android:layout_height="56sp"
            android:layout_marginTop="1sp"
            android:gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="退 出 登 陆"
                android:textColor="@color/black"
                tools:ignore="HardcodedText" />
        </RelativeLayout>
    </RelativeLayout>
</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>